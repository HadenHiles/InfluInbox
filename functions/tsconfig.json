{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "rootDir": "src",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    ".eslintrc.js"
  ]
}